<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteDetailsActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarnotedetail"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Title shows Here"
            android:id="@+id/titlenotedetail"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:background="#1C1B1B"
        android:gravity="top|left"
        android:textColor="@color/white"
        android:hint="Enter Your Note Here"
        android:textColorHint="#F3E6E6"
        android:layout_below="@+id/toolbarnotedetail"
        android:padding="15dp"
        android:id="@+id/contentnotedetail">

    </TextView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity = "bottom|end"
        android:id="@+id/gotoeditnote"
        android:src="@drawable/edit"
        android:background="#A1F4AB"
        app:maxImageSize="40dp"
        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</RelativeLayout>